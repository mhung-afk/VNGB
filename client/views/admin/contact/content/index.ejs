<div id="content-contact" class="col-sm-8 col-lg-10">
    <h2>Edit content Contact info</h2>
    <form action="/admin/contact" method="post">
        <div class="mb-3">
            <label class="form-label">Address</label>
            <textarea class="form-control" name="address" rows="3" required><%= address %></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input class="form-control" name="slogan" value="<%= email %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Twitter</label>
            <input class="form-control" name="twitter" value="<%= twitter %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Instagram</label>
            <input class="form-control" name="instagram" value="<%= instagram %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Linkedin</label>
            <input class="form-control" name="linkedin" value="<%= linkedin %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Facebook</label>
            <input class="form-control" name="facebook" value="<%= facebook %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Phone Number</label>
            <input class="form-control" name="phone" value="<%= phone %>" required>
        </div>
        <button class="btn btn-primary" type="submit">Update</button>
    </form>
</div>