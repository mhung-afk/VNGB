<div class="card-project">
    <div class="card-project-content">
        <h1 class="project-content-title">OTHER PRODUCTS</h1>
        <div class="project-content-description"> Our similar product </div>
    </div>
    <div class="projects">
        <% product.projects.forEach(project => { %>
            <% if (thisProductId != product.id) { %>
                <div class="project-card">
                    <a href="/product/<%= product.id %>/<%= project.id %>  ">
                        <div class="project-card-img"><img src="<%= project.banner %> " alt=""></div>
                        <div class="project-card-content"><%= project.name %> </div>
                    </a>
                </div>
            <% } %>
        <% }) %>
    </div>    
</div>